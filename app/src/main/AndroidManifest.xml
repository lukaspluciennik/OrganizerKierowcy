<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ukaszpuciennik.organiezerkierowcy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Organizer Kierowcy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Oil_layout"
            android:label="Olej silnikowy"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".HistoriaLayout"
            android:parentActivityName=".Oil_layout"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".HistoriaWymian"
            android:parentActivityName=".Oil_layout"
            android:windowSoftInputMode="stateHidden" />

    </application>

</manifest>